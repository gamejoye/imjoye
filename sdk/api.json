{
  "openapi": "3.0.0",
  "paths": {
    "/users/{id}": {
      "get": {
        "operationId": "UsersController_getUserById",
        "summary": "根据userId获取用户",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取用户",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/UserVo"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          }
        },
        "tags": [
          "users"
        ]
      }
    },
    "/users/{id}/friends": {
      "get": {
        "operationId": "UsersController_getFriendsById",
        "summary": "根据userId获取好友列表",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功根据userId获取好友列表",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/UserVo"
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          },
          "403": {
            "description": "权限不足"
          }
        },
        "tags": [
          "users"
        ]
      }
    },
    "/users/{id}/friends/{friendId}": {
      "get": {
        "operationId": "UsersController_getFriendInfoByUserIdAndFriendId",
        "summary": "获取好友信息",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "friendId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取好友信息",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/FriendInfoVo"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          },
          "403": {
            "description": "权限不足"
          }
        },
        "tags": [
          "users"
        ]
      }
    },
    "/users/avatar/upload": {
      "post": {
        "operationId": "UsersController_uploadAvatar",
        "summary": "上传头像",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "头像上传成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/String"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "413": {
            "description": "头像大小超过2MB"
          }
        },
        "tags": [
          "users"
        ]
      }
    },
    "/auth/login": {
      "post": {
        "operationId": "AuthController_login",
        "summary": "用户登录",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginUserRequestDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/LoginVo"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "登录失败"
          }
        },
        "tags": [
          "auth"
        ]
      }
    },
    "/auth/register": {
      "post": {
        "operationId": "AuthController_register",
        "summary": "用户注册",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserRequestDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/UserVo"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "注册失败"
          },
          "409": {
            "description": "用户邮箱已经存在"
          }
        },
        "tags": [
          "auth"
        ]
      }
    },
    "/chatrooms/{chatroomId}/visit": {
      "put": {
        "operationId": "ChatroomsController_visitChatroom",
        "summary": "更新用户对于聊天室的最后访问时间",
        "parameters": [
          {
            "name": "timestamp",
            "required": true,
            "in": "query",
            "example": "2024-04-23 21:45",
            "description": "访问聊天室的最后时间戳",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "chatroomId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "成功更新用户访问聊天室的最后时间"
          },
          "404": {
            "description": "聊天室不存在或者无权访问"
          }
        },
        "tags": [
          "chatrooms"
        ]
      }
    },
    "/chatrooms/{chatroomId}": {
      "get": {
        "operationId": "ChatroomsController_getChatroom",
        "summary": "根据聊天室id获取单个聊天室",
        "parameters": [
          {
            "name": "chatroomId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取单个聊天室",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/ChatroomVo"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          },
          "404": {
            "description": "未找到聊天室"
          }
        },
        "tags": [
          "chatrooms"
        ]
      }
    },
    "/chatrooms": {
      "get": {
        "operationId": "ChatroomsController_getSingleChatroomByFriendId",
        "summary": "根据userId和friendId获取单个单聊聊天室",
        "parameters": [
          {
            "name": "friend_id",
            "required": true,
            "in": "query",
            "example": 2,
            "description": "好友id",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取单个聊天室",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/ChatroomVo"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          },
          "404": {
            "description": "未找到聊天室"
          }
        },
        "tags": [
          "chatrooms"
        ]
      }
    },
    "/chatrooms/summaries/{chatroomId}": {
      "get": {
        "operationId": "ChatroomsController_getChatroomSummary",
        "parameters": [
          {
            "name": "chatroomId",
            "required": true,
            "in": "path",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "timestamp",
            "required": true,
            "in": "query",
            "example": "2024-04-23 21:45",
            "description": "最后一次访问聊天室的时间戳",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取单个聊天室的chatroomSummaries",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/ChatroomSummaryVo"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          }
        },
        "tags": [
          "chatrooms"
        ]
      }
    },
    "/chatrooms/summaries": {
      "post": {
        "operationId": "ChatroomsController_getChatroomSummaries",
        "summary": "获取聊天室信息概要",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetChatroomSummariesDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功获取chatroomSummaries",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/ChatroomSummaryVo"
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          }
        },
        "tags": [
          "chatrooms"
        ]
      }
    },
    "/messages": {
      "get": {
        "operationId": "MessagesController_getMessagesByChatroomId",
        "summary": "根据roomId获取消息",
        "parameters": [
          {
            "name": "room_id",
            "required": true,
            "in": "query",
            "example": 2,
            "description": "房间id",
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取聊天室消息",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/MessageVo"
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          },
          "404": {
            "description": "聊天室不存在"
          }
        },
        "tags": [
          "messages"
        ]
      },
      "post": {
        "operationId": "MessagesController_addMessage",
        "summary": "在聊天室中发送消息",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IAddMessageDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "成功发送消息",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/ApiBaseResult"
                    },
                    {
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/MessageVo"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "未认证用户"
          },
          "403": {
            "description": "无法在该聊天室发送消息"
          },
          "404": {
            "description": "资源不存在"
          }
        },
        "tags": [
          "messages"
        ]
      }
    }
  },
  "info": {
    "title": "IMJoye Api",
    "description": "[如有天樱花再开] 测试IMJoye Api",
    "version": "1.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "Api/V1",
      "description": ""
    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "ApiBaseResult": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number",
            "description": "Http状态码",
            "examples": [
              200,
              201,
              404,
              403
            ]
          },
          "message": {
            "type": "string",
            "description": "Http内容的简要概述",
            "examples": [
              "用户权限不足",
              "未找到资源"
            ]
          }
        },
        "required": [
          "statusCode",
          "message"
        ]
      },
      "UserVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 987654321,
            "description": "唯一主键"
          },
          "username": {
            "type": "string",
            "example": "gamejoye",
            "description": "用户名"
          },
          "email": {
            "type": "string",
            "example": "gamejoye@gmail.com",
            "description": "用户名邮箱"
          },
          "avatarUrl": {
            "type": "string",
            "example": "https://gamejoye.top/static/media/bg.6885a3ed90df348b4f7a.jpeg",
            "description": "用户头像"
          },
          "description": {
            "type": "string",
            "example": "天天开心， 天天向上",
            "description": "用户个性签名"
          },
          "createTime": {
            "type": "string",
            "example": "2024-03-23 19:12",
            "description": "注册时间"
          }
        },
        "required": [
          "id",
          "username",
          "email",
          "avatarUrl",
          "description",
          "createTime"
        ]
      },
      "FriendInfoVo": {
        "type": "object",
        "properties": {
          "user": {
            "description": "好友的基本信息",
            "allOf": [
              {
                "$ref": "#/components/schemas/UserVo"
              }
            ]
          },
          "status": {
            "type": "string",
            "description": "好友请求状态",
            "example": "PENDING",
            "enum": [
              "PENDING",
              "ACCEPT",
              "REJECT"
            ]
          },
          "createTime": {
            "type": "string",
            "description": "好友请求创建的时间",
            "example": "2024-05-20 19:12"
          },
          "updateTime": {
            "type": "string",
            "description": "好友请求状态更改的时间",
            "example": "2024-05-20 21:09"
          }
        },
        "required": [
          "user",
          "status",
          "createTime",
          "updateTime"
        ]
      },
      "String": {
        "type": "object",
        "properties": {}
      },
      "LoginVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "用户id",
            "examples": [
              1,
              2,
              7,
              99,
              12412
            ]
          },
          "token": {
            "type": "string",
            "description": "用户登录成功后的认证信息"
          }
        },
        "required": [
          "id",
          "token"
        ]
      },
      "LoginUserRequestDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "gamejoye@gmail.com",
            "description": "用户邮箱"
          },
          "password": {
            "type": "string",
            "example": "147jkl...",
            "description": "用户密码"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "RegisterUserRequestDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "gamejoye",
            "description": "用户名"
          },
          "email": {
            "type": "string",
            "example": "gamejoye@gmail.com",
            "description": "用户邮箱"
          },
          "password": {
            "type": "string",
            "example": "147jkl...",
            "description": "用户密码"
          },
          "avatarUrl": {
            "type": "string",
            "example": "https://gamejoye.top/static/media/bg.6885a3ed90df348b4f7a.jpeg",
            "description": "用户头像"
          }
        },
        "required": [
          "username",
          "email",
          "password",
          "avatarUrl"
        ]
      },
      "ChatroomVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 987654321,
            "description": "房间号"
          },
          "type": {
            "type": "string",
            "example": "SINGLE",
            "description": "聊天室类型(单聊、多聊)",
            "enum": [
              "SINGLE",
              "MULTIPLE"
            ]
          },
          "name": {
            "type": "string",
            "example": "chatroomName",
            "description": "聊天室名字"
          },
          "avatarUrl": {
            "type": "string",
            "example": "https://avatars.githubusercontent.com/u/88575063?v=4",
            "description": "聊天室的头像 当为单聊的时候为对方的头像"
          },
          "createTime": {
            "type": "string",
            "example": "2024-03-23 19:12",
            "description": "聊天室建立时间"
          }
        },
        "required": [
          "id",
          "type",
          "name",
          "avatarUrl",
          "createTime"
        ]
      },
      "MessageVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 987654321,
            "description": "消息id"
          },
          "temporaryId": {
            "type": "number",
            "example": 4751776,
            "description": "消息的暂时id从前端传来"
          },
          "chatroom": {
            "description": "消息所属聊天室",
            "allOf": [
              {
                "$ref": "#/components/schemas/ChatroomVo"
              }
            ]
          },
          "from": {
            "description": "消息由谁发出",
            "allOf": [
              {
                "$ref": "#/components/schemas/UserVo"
              }
            ]
          },
          "content": {
            "type": "string",
            "example": "你好，很高兴认识你",
            "description": "消息内容"
          },
          "createTime": {
            "type": "string",
            "example": "2024-03-23 19:12",
            "description": "消息创建时间"
          }
        },
        "required": [
          "id",
          "temporaryId",
          "chatroom",
          "from",
          "content",
          "createTime"
        ]
      },
      "ChatroomSummaryVo": {
        "type": "object",
        "properties": {
          "latestVisitTime": {
            "type": "string",
            "example": "2024-03-23 19:12",
            "description": "当前聊天室最后一次用户的访问时间 最早为用户加入聊天室的时间"
          },
          "joinTime": {
            "type": "string",
            "example": "2024-03-23 19:12",
            "description": "用户加入聊天室的时间"
          },
          "unreadMessageCount": {
            "type": "number",
            "examples": [
              1,
              55,
              0,
              199
            ],
            "description": "当前聊天室用户未读的消息数量"
          },
          "onlineUserIds": {
            "example": [
              21,
              2642,
              366,
              4453,
              576,
              641,
              712
            ],
            "description": "当前聊天室在线用户的id数组",
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "chatroom": {
            "description": "当前summary记录所对应的chatroom",
            "allOf": [
              {
                "$ref": "#/components/schemas/ChatroomVo"
              }
            ]
          },
          "latestMessage": {
            "description": "当前聊天室的最新一条消息",
            "allOf": [
              {
                "$ref": "#/components/schemas/MessageVo"
              }
            ]
          }
        },
        "required": [
          "latestVisitTime",
          "joinTime",
          "unreadMessageCount",
          "onlineUserIds",
          "chatroom",
          "latestMessage"
        ]
      },
      "GetChatroomSummaryDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 11234889,
            "description": "聊天室id"
          },
          "latestVisitTime": {
            "type": "string",
            "example": "2024-03-23 19:12",
            "description": "最后一次用户访问当前聊天室的时间"
          }
        },
        "required": [
          "id",
          "latestVisitTime"
        ]
      },
      "GetChatroomSummariesDto": {
        "type": "object",
